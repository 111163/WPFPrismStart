<UserControl x:Class="WPFNetFramePrismMD.Views.ThreadSync.ManualResetEventView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFNetFramePrismMD.Views.ThreadSync"
             mc:Ignorable="d" 
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:HandyC="https://handyorg.github.io/handycontrol" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <GroupBox Header="ManualResetEvent" Margin="10">
            <StackPanel>
                <TextBlock Text="{Binding ManualResetEventInfo}" />
                <Button Content="Set" Command="{Binding SetCommand}" />
                <Button Content="Reset" Command="{Binding ResetCommand}" />
                <Button Content="WaitOne" Command="{Binding WaitOneCommand}" />
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
